<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/edge">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="정류장"
                    android:textSize="16sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/rail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rail2" />

                <ImageView
                    android:id="@+id/returnrail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/returnrail" />

                <ImageView
                    android:id="@+id/rail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rail1" />

                <ImageView
                    android:id="@+id/railstop"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="false"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/railstop1" />

                <ImageView
                    android:id="@+id/busicon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/busicon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginRight="5dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/seatnote" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/note"
                    android:layout_alignTop="@id/note"
                    android:layout_alignRight="@id/note"
                    android:layout_alignBottom="@id/note"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="좌석수"
                    android:textColor="#056EED"
                    android:textSize="14sp"
                    android:typeface="sans" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/BusArriveInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:animateLayoutChanges="true"
            android:text="버스도착정보" />

    </androidx.cardview.widget.CardView>

</LinearLayout>