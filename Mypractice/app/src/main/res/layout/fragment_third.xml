<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FgFirst"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_dream"
            android:text="EditText"
            android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-50dp"
            android:background="@drawable/back_3"></Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  역시 애매하고, 부담스러우면 \n 음악를 통해, (사)용자님 머리좀 식히고 가실께요!"
        android:translationY="-30dp"
        android:fontFamily="@font/font_dream"
        android:layout_gravity="center">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:background="@drawable/phone"
        android:scaleX="0.9"
        android:padding="30dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:translationY="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/r8"
                android:scaleX="0.9"
                android:adjustViewBounds="true"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_width="1dp"
            android:translationY="100dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleX="0.9"
                android:src="@drawable/r8"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 테스트\n 테스트"
                android:textSize="30dp"
                android:fontFamily="@font/font_dream"></TextView>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>