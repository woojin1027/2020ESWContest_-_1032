<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:srcCompat="@drawable/logo_b_9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dream"
            android:gravity="bottom|center_horizontal"
            android:text="The FACO 소개"
            android:layout_marginTop="-3dp"
            android:textColor="#134563"
            android:background="#91A8D2"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:translationX="180dp"
        android:translationY="-118dp"
        android:background="@drawable/back_1"
        android:id="@+id/egg_1">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="#91A8D2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font_dream"
                android:text="앱 개발동기"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                android:padding="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardUseCompatPadding="true"
                android:padding="15dp">

                <TextView
                    android:id="@+id/mypage_nearbystop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/font_dream"
                    android:text="@string/name_story"
                    android:textColor="#91A8D2"
                    android:textSize="16sp"
                    android:translationX="5dp" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="423dp"
                android:layout_height="31dp"
                android:background="@drawable/edge3"
                android:translationX="-20dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/font_dream"
                android:text="사용방법"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="15dp"/>

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:videoId="vRXZj0DzXIA"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                android:layout_marginBottom="30dp"
                android:padding="15dp"/>

            <LinearLayout
                android:layout_width="423dp"
                android:layout_height="31dp"
                android:background="@drawable/edge3"
                android:translationX="-20dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/font_dream"
                android:text="상세 설명"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="15dp"/>


            <Button
                android:id="@+id/reason1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/back_3"
                android:fontFamily="@font/font_dream"
                android:padding="15dp"
                android:text="1. 노선 상정 이유(버튼)"
                android:textColor="#ffffff"
                android:textSize="16sp">
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/font_dream"
                android:text="2. 자세한 활용방법"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ticket_1">
            </ImageView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>